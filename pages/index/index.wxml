<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
      <image class="userinfo-avatar" src="/images/avator.png" mode="cover"></image>
    </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl ? userInfo.avatarUrl :'/images/avator.png'}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>